using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;


namespace NewNameSpaceTest
{
    public class FullNameSpaceClass
    {
        //THIS IS WHERE MY STUFF BEGINS
        public class StaticStuffNeeded
        {
            public string playerName;
            public string itemName;
            public string itemMaterial;
            public string playerMenuChoice;
            public static int itemAttribute1 = 1;
            public static int itemAttribute2 = 1;
            public static int itemAttribute3 = 1;
            public static int itemAttribute4 = 1;
            public static string itemAttribute1Name = "Hardness";
            public static string itemAttribute2Name = "Damage";
            public static string itemAttribute3Name = "Healing";
            public static string itemAttribute4Name = "Structure";
            public static int imbueCount = 0;
            

            public static void ItemImbue(string playerName, string itemName, string itemMaterial, int itemAttribute1, string itemAttribute1Name)
            {
                var ran1 = new Random();
                StaticStuffNeeded.itemAttribute1 = StaticStuffNeeded.itemAttribute1 + ran1.Next(199, 400);
                Console.WriteLine("Imbue completed, you have used "+imbueCount+" imbues out of the 3 available");
                Console.ReadLine();
            }

            public void MenuChoice(string playerMenuChoice)
            {
                if (playerMenuChoice == "e")
                {
                    ItemExamine();
                }
                else if (playerMenuChoice == "i")
                {
                    ItemImbue(playerName, itemName, itemMaterial, itemAttribute1, itemAttribute1Name);
                    imbueCount ++;

                }
            }

            public void ItemExamine()
            {
                Console.WriteLine("Item Name: " + itemName);
                Console.WriteLine("Its stats look like:");
                Console.WriteLine("" + itemAttribute1Name + ": " + itemAttribute1);
                Console.WriteLine("" + itemAttribute2Name + ": " + itemAttribute2);
                Console.WriteLine("" + itemAttribute3Name + ": " + itemAttribute3);
                Console.WriteLine("" + itemAttribute4Name + ": " + itemAttribute4);
                Console.WriteLine("" + itemAttribute5Name + ": " + itemAttribute5);
                Console.WriteLine("" + itemAttribute6Name + ": " + itemAttribute6);

            }
            
            public void EarthElementa()
            {
                
            }




        }
        public class WorkingClass
        {

            public static void Main()
            {
                StaticStuffNeeded ssn = new StaticStuffNeeded();
                Console.WriteLine("Welcome to Elementa");
                Console.WriteLine();
                Console.WriteLine("Here you will create items and imbue them with mystical properties of elementa, the stuff of magic, mysticism, and alchemy.");
                Console.WriteLine("...but first lets get some sundries out of the way, what is your name?");
                ssn.playerName = Console.ReadLine();
                Console.WriteLine("mmmkay " + ssn.playerName + " and what shall we make?");
                ssn.itemName = Console.ReadLine();
                Console.WriteLine("Got it, and its made of...?");
                ssn.itemMaterial = Console.ReadLine();
                Console.WriteLine("Finally! " + ssn.playerName + " is planning on making " + ssn.itemName + " out of " + ssn.itemMaterial + ". Fine fine, alright. What next?");
                Console.ReadLine();

                do
                {
                    Console.WriteLine("Here we go, Do you want to (e)xamine your item or (i)mbue it?");
                    ssn.playerMenuChoice = Console.ReadLine();
                    ssn.MenuChoice(ssn.playerMenuChoice);


                } while (StaticStuffNeeded.imbueCount < 3);
            }


        }
    // Removed from code for now to get setup done.

    }
}
