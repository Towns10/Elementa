using System;
using System.IO;

namespace ElementaProject
{
	class Working
	{
		string playerName;
		string playerLocation;
		string playerInput;
		int playerHealth = 1;
		int playerStamina = 3;


		void Main()
		{
			static System.Windows.Forms.Timer playerStamina = new System.Windows.Forms.Timer();
			playerStamina.Tick += new EventHandler(Publics.staminaGain);
			playerStamina.Interval = 120000;
			Console.WriteLine("Welcome to Elementa, what is your name?");
			playerName = Console.ReadLine();
			playerStamina.Start();
			playerLocation = "center";
			do
			{
			//stuff here	
			} while (playerHealth > 0);
		}
	}


	class Publics
	{
		static void staminaGain ()
		{
			if(Working.playerHealth > 0)
		{
			if(Working.playerStamina < 8)
			{
				playerStamina ++;
			}
		}
		else
		{
			playerHealth ++;
		}
	}
		public void DirectionChoice ()
		{
			if (strcmp(playerInput, "n") == 0)
			{
				playerLocation = newLocationNorth;
				playerStamina --;
			}
			else if (strcmp(playerInput, "e") == 0)
			{
				playerLocation = newLocationEast;
				playerStamina --;
			}
			else if (strcmp(playerInput, "s") == 0)
			{
				playerLocation = newLocationSouth;
				playerStamina --;
			}
			else if (strcmp(playerInput, "w") == 0)
			{
				playerLocation = newLocationWest;
				playerStamina --;
			}
			else if (strcmp(playerInput, "ne") == 0)
			{
				playerLocation = newLocationNorthEast;
				playerStamina --;
			}
			else if (strcmp(playerInput, "se") == 0)
			{
				playerLocation = newLocationSouthEast;
				playerStamina --;
			}
			else if (strcmp(playerInput, "sw") == 0)
			{
				playerLocation = newLocationSouthWest;
				playerStamina --;
			}
			else if (strcmp(playerInput, "nw") == 0)
			{
				playerLocation = newLocationNorthWest;
				playerStamina --;
			}
			else if (strcmp(playerInput, "u") == 0)
			{
				playerLocation = newLocationUp;
				playerStamina --;
			}
			else if (strcmp(playerInput, "d") == 0)
			{
				playerLocation = newLocationDown;
				playerStamina --;
			}
			else if (strcmp(playerInput, "in") == 0)
			{
				playerLocation = newLocationIn;
				playerStamina --;
			}
			else if (strcmp(playerInput, "out") == 0)
			{
				playerLocation = newLocationOut;
				playerStamina --;
			}
//	else if (strcmp(playerInput, "w") == 0)
//	{
//		playerLocation = newLocationWest
//	}
//	else if (strcmp(playerInput, "w") == 0)
//	{
//		playerLocation = newLocationWest
//	}
//	else if (strcmp(playerInput, "w") == 0)
//	{
//		playerLocation = newLocationWest
//	}
			else
			{
				Console.WriteLine ("Invalid Entry");
			}

		}
	}
}
