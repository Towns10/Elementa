using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;


namespace NewNameSpaceTest
{
    public class FullNameSpaceClass
    {
        //THIS IS WHERE MY STUFF BEGINS
        public class StaticStuffNeeded
        {
            public string playerName;
            public string itemName;
            public string itemMaterial;
            public string playerMenuChoice;
            public string playerElementaChoice;
            public static int itemAttribute1 = 1;
            public static int itemAttribute2 = 1;
            public static int itemAttribute3 = 1;
            public static int itemAttribute4 = 1;
            public static string itemAttribute1Name = "Hardness";
            public static string itemAttribute2Name = "Damage";
            public static string itemAttribute3Name = "Healing";
            public static string itemAttribute4Name = "Structure";
            public static int imbueCount = 0;
            public static int earthHardnessMod;
            public static int earthDamageMod;
            public static int earthHealingMod;
            public static int earthStructureMod;
            public static int fireHardnessMod;
            public static int fireDamageMod;
            public static int fireHealingMod;
            public static int fireStructureMod;
            public static int airHardnessMod;
            public static int airDamageMod;
            public static int airHealingMod;
            public static int airStructureMod;
            public static int waterHardnessMod;
            public static int waterDamageMod;
            public static int waterHealingMod;
            public static int waterStructureMod;



            public static void ItemImbue(string playerName, string itemName, string itemMaterial, int itemAttribute1, string itemAttribute1Name)
            {
                EarthElementa();


            }

            public void MenuChoice(string playerMenuChoice, string playerElementaChoice)
            {
                if (playerMenuChoice == "e")
                {
                    ItemExamine();
                }
                else if (playerMenuChoice == "i")
                {
                    Console.WriteLine("Ok, and which elementa do you wish to imbue with? (e)arth, (f)ire, (a)ir, or (w)ater?");
                    playerElementaChoice = Console.ReadLine();
                    if (playerElementalChoice == "e")
                    {
                        
                        ItemImbue(playerName, itemName, itemMaterial, itemAttribute1, itemAttribute1Name);
                        imbueCount++;
                        StaticStuffNeeded.itemAttribute1 = StaticStuffNeeded.itemAttribute1 + StaticStuffNeeded.earthHardnessMod;
                        StaticStuffNeeded.itemAttribute2 = StaticStuffNeeded.itemAttribute2 + StaticStuffNeeded.earthDamageMod;
                        StaticStuffNeeded.itemAttribute3 = StaticStuffNeeded.itemAttribute3 + StaticStuffNeeded.earthHealingMod;
                        StaticStuffNeeded.itemAttribute4 = StaticStuffNeeded.itemAttribute4 + StaticStuffNeeded.earthStructureMod;
                        Console.WriteLine("Imbue completed, you have used " + imbueCount + " imbues out of the 3 available");
                        Console.ReadLine();
                    }
                    else if (playerElementalChoice == "f")
                    {
                        ItemImbue(playerName, itemName, itemMaterial, itemAttribute1, itemAttribute1Name);
                        imbueCount++;
                        StaticStuffNeeded.itemAttribute1 = StaticStuffNeeded.itemAttribute1 + StaticStuffNeeded.fireHardnessMod;
                        StaticStuffNeeded.itemAttribute2 = StaticStuffNeeded.itemAttribute2 + StaticStuffNeeded.fireDamageMod;
                        StaticStuffNeeded.itemAttribute3 = StaticStuffNeeded.itemAttribute3 + StaticStuffNeeded.fireHealingMod;
                        StaticStuffNeeded.itemAttribute4 = StaticStuffNeeded.itemAttribute4 + StaticStuffNeeded.fireStructureMod;
                        Console.WriteLine("Imbue completed, you have used " + imbueCount + " imbues out of the 3 available");
                        Console.ReadLine();
                    }
                    else if (playerElementalChoice == "a")
                    {
                        ItemImbue(playerName, itemName, itemMaterial, itemAttribute1, itemAttribute1Name);
                        imbueCount++;
                        StaticStuffNeeded.itemAttribute1 = StaticStuffNeeded.itemAttribute1 + StaticStuffNeeded.airHardnessMod;
                        StaticStuffNeeded.itemAttribute2 = StaticStuffNeeded.itemAttribute2 + StaticStuffNeeded.airDamageMod;
                        StaticStuffNeeded.itemAttribute3 = StaticStuffNeeded.itemAttribute3 + StaticStuffNeeded.airHealingMod;
                        StaticStuffNeeded.itemAttribute4 = StaticStuffNeeded.itemAttribute4 + StaticStuffNeeded.airStructureMod;
                        Console.WriteLine("Imbue completed, you have used " + imbueCount + " imbues out of the 3 available");
                        Console.ReadLine();
                    }
                    else if (playerElementalChoice == "w")
                    {
                        ItemImbue(playerName, itemName, itemMaterial, itemAttribute1, itemAttribute1Name);
                        imbueCount++;
                        StaticStuffNeeded.itemAttribute1 = StaticStuffNeeded.itemAttribute1 + StaticStuffNeeded.waterHardnessMod;
                        StaticStuffNeeded.itemAttribute2 = StaticStuffNeeded.itemAttribute2 + StaticStuffNeeded.waterDamageMod;
                        StaticStuffNeeded.itemAttribute3 = StaticStuffNeeded.itemAttribute3 + StaticStuffNeeded.waterHealingMod;
                        StaticStuffNeeded.itemAttribute4 = StaticStuffNeeded.itemAttribute4 + StaticStuffNeeded.waterStructureMod;
                        Console.WriteLine("Imbue completed, you have used " + imbueCount + " imbues out of the 3 available");
                        Console.ReadLine();
                    }
                    
                }
            }

            public void ItemExamine()
            {
                Console.WriteLine("Item Name: " + itemName);
                Console.WriteLine("Its stats look like:");
                Console.WriteLine("" + itemAttribute1Name + ": " + itemAttribute1);
                Console.WriteLine("" + itemAttribute2Name + ": " + itemAttribute2);
                Console.WriteLine("" + itemAttribute3Name + ": " + itemAttribute3);
                Console.WriteLine("" + itemAttribute4Name + ": " + itemAttribute4);

            }

            public static void EarthElementa()
            {
                var earthran1 = new Random();
                int earthHardnessMod = 100 + earthran1.Next(99, 300);
                int earthDamageMod = 40 + earthran1.Next(9, 110);
                int earthHealingMod = 0;
                int earthStructureMod = earthran1.Next(49, 150) * -1;
                Console.WriteLine("Hmm and a pinch of that...");

            }

            public void FireElementa()
            {
                var fireran1 = new Random();
                int fireHardnessMod = fireran1.Next(49, 150) * -1;
                int fireDamageMod = 100 + fireran1.Next(99, 300);
                int fireHealingMod = 40 + fireran1.Next(9, 110);
                int fireStructureMod = 0;
            }

            public void AirElementa()
            {
                var airran1 = new Random();
                int airHardnessMod = 40 + airran1.Next(9, 110);
                int airDamageMod = airran1.Next(49, 150) * -1;
                int airHealingMod = 100 + airran1.Next(99, 300);
                int airStructureMod = 0;
            }

            public void WaterElementa()
            {
                var waterran1 = new Random();
                int waterHardnessMod = 0;
                int waterDamageMod = waterran1.Next(49, 150) * -1;
                int waterHealingMod = 40 + waterran1.Next(9, 110);
                int waterStructureMod = 100 + waterran1.Next(99, 300);
            }


        }
        public class WorkingClass
        {

            public static void Main()
            {
                StaticStuffNeeded ssn = new StaticStuffNeeded();
                Console.WriteLine("Welcome to Elementa");
                Console.WriteLine();
                Console.WriteLine("Here you will create items and imbue them with mystical properties of elementa, the stuff of magic, mysticism, and alchemy.");
                Console.WriteLine("...but first lets get some sundries out of the way, what is your name?");
                ssn.playerName = Console.ReadLine();
                Console.WriteLine("mmmkay " + ssn.playerName + " and what shall we make?");
                ssn.itemName = Console.ReadLine();
                Console.WriteLine("Got it, and its made of...?");
                ssn.itemMaterial = Console.ReadLine();
                Console.WriteLine("Finally! " + ssn.playerName + " is planning on making " + ssn.itemName + " out of " + ssn.itemMaterial + ". Fine fine, alright. What next?");
                Console.ReadLine();

                do
                {
                    Console.WriteLine("Here we go, Do you want to (e)xamine your item or (i)mbue it?");
                    ssn.playerMenuChoice = Console.ReadLine();
                    ssn.MenuChoice(ssn.playerMenuChoice);


                } while (StaticStuffNeeded.imbueCount < 3);
            }


        }
        // Removed from code for now to get setup done.

    }
}
