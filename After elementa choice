using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;


namespace ElementaNS
{
        //THIS IS WHERE MY STUFF BEGINS
        public class StuffNeeded
        {
            public string playerName;
            public string itemName;
            public string itemMaterial;
            public string playerMenuChoice;
			public string elementaChoice;
            public int itemHardness = 1;
            public int itemDamage = 1;
            public int itemHealing = 1;
            public int itemStructure = 1;
            public string itemAttribute1Name = "Hardness";
            public string itemAttribute2Name = "Damage";
            public string itemAttribute3Name = "Healing";
            public string itemAttribute4Name = "Structure";
            public int imbueCount = 0;
            public int earthHardnessMod;
            public int earthDamageMod;
            public int earthHealingMod;
            public int earthStructureMod;
            public int fireHardnessMod;
            public int fireDamageMod;
            public int fireHealingMod;
            public int fireStructureMod;
            public int airHardnessMod;
            public int airDamageMod;
            public int airHealingMod;
            public int airStructureMod;
            public int waterHardnessMod;
            public int waterDamageMod;
            public int waterHealingMod;
            public int waterStructureMod;
            
            

            public void ItemExamine()
            {
                Console.WriteLine("Item Name: " + itemName);
                Console.WriteLine("Its stats look like:");
                Console.WriteLine("" + itemAttribute1Name + ":  " + itemHardness);
                Console.WriteLine("" + itemAttribute2Name + ":    " + itemDamage);
                Console.WriteLine("" + itemAttribute3Name + ":   " + itemHealing);
                Console.WriteLine("" + itemAttribute4Name + ": " + itemStructure);

            }


        }
        public class WorkingClass
        {

            public static void Main()
            {
                StuffNeeded sn = new StuffNeeded();
                Console.WriteLine("Welcome to Elementa");
                Console.WriteLine();
                Console.WriteLine("Here you will create items and imbue them with mystical properties of elementa, the stuff of magic, mysticism, and alchemy.");
                Console.WriteLine("...but first lets get some sundries out of the way, what is your name?");
                sn.playerName = Console.ReadLine();
                Console.WriteLine("mmmkay " + sn.playerName + " and what shall we make?");
                sn.itemName = Console.ReadLine();
                Console.WriteLine("Got it, and its made of...?");
                sn.itemMaterial = Console.ReadLine();
                Console.WriteLine("Finally! " + sn.playerName + " is planning on making " + sn.itemName + " out of " + sn.itemMaterial + ". Fine fine, alright. What next?");

                do
                {
                    Console.WriteLine("Do you want to (q)ualify your item or (i)mbue it?");
                    sn.playerMenuChoice = Console.ReadLine();
                		if (sn.playerMenuChoice == "q")
                		{
                    		sn.ItemExamine();
                		}
                		else if (sn.playerMenuChoice == "i")
                		{
							Console.WriteLine("Which elementa should we imbue it with? (e)arth, (f)ire, (a)ir, or (w)ater?");
							sn.elementaChoice = Console.ReadLine();
							if(sn.elementaChoice == "e")
							{
                				var earthran1 = new Random();
								var earthran2 = new Random();
								var earthran3 = new Random();
                				sn.earthHardnessMod = 100 + earthran1.Next(99, 300);
                				sn.earthDamageMod = 40 + earthran2.Next(9, 110);
                				sn.earthHealingMod = 0;
                				sn.earthStructureMod = earthran3.Next(49,150) * -1;
                				Console.WriteLine("Hmm and a pinch of that..."+sn.earthHardnessMod+" "+sn.earthDamageMod+" "+sn.earthHealingMod+" "+sn.earthStructureMod);
                    			sn.imbueCount ++;
                    			sn.itemHardness = sn.itemHardness + sn.earthHardnessMod;
								sn.itemDamage = sn.itemDamage + sn.earthDamageMod;
								sn.itemHealing = sn.itemHealing + sn.earthHealingMod;
								sn.itemStructure = sn.itemStructure + sn.earthStructureMod;
							}
							else if(sn.elementaChoice == "f")
							{
								var fireran1 = new Random();
								var fireran2 = new Random();
								var fireran3 = new Random();
								sn.fireHardnessMod = fireran1.Next(49,150) * -1;
                				sn.fireDamageMod = 100 + fireran2.Next(99, 300);
                				sn.fireHealingMod = 40 + fireran3.Next(9, 110);
                				sn.fireStructureMod = 0;
								Console.WriteLine("This will work nicely..."+sn.fireHardnessMod+" "+sn.fireDamageMod+" "+sn.fireHealingMod+" "+sn.fireStructureMod);
                    			sn.imbueCount ++;
                    			sn.itemHardness = sn.itemHardness + sn.fireHardnessMod;
								sn.itemDamage = sn.itemDamage + sn.fireDamageMod;
								sn.itemHealing = sn.itemHealing + sn.fireHealingMod;
								sn.itemStructure = sn.itemStructure + sn.fireStructureMod;
							}
							else if(sn.elementaChoice == "a")
							{
								var airran1 = new Random();
								var airran2 = new Random();
								var airran3 = new Random();
                				sn.airHardnessMod = 40 + airran1.Next(9, 110);
								sn.airDamageMod = airran2.Next(49,150) * -1;
                				sn.airHealingMod = 100 + airran3.Next(99, 300);
                				sn.airStructureMod = 0;
								Console.WriteLine("This will work nicely..."+sn.airHardnessMod+" "+sn.airDamageMod+" "+sn.airHealingMod+" "+sn.airStructureMod);
                    			sn.imbueCount ++;
                    			sn.itemHardness = sn.itemHardness + sn.airHardnessMod;
								sn.itemDamage = sn.itemDamage + sn.airDamageMod;
								sn.itemHealing = sn.itemHealing + sn.airHealingMod;
								sn.itemStructure = sn.itemStructure + sn.airStructureMod;
							}
							else if(sn.elementaChoice == "w")
							{
								var waterran1 = new Random();
								var waterran2 = new Random();
								var waterran3 = new Random();
                				sn.waterHardnessMod = 0;
                				sn.waterDamageMod = waterran1.Next(49,150) * -1;
                				sn.waterHealingMod = 40 + waterran2.Next(9, 110);
                				sn.waterStructureMod = 100 + waterran3.Next(99, 300);
								Console.WriteLine("This will work nicely..."+sn.airHardnessMod+" "+sn.airDamageMod+" "+sn.airHealingMod+" "+sn.airStructureMod);
                    			sn.imbueCount ++;
                    			sn.itemHardness = sn.itemHardness + sn.airHardnessMod;
								sn.itemDamage = sn.itemDamage + sn.airDamageMod;
								sn.itemHealing = sn.itemHealing + sn.airHealingMod;
								sn.itemStructure = sn.itemStructure + sn.airStructureMod;
							}
                    		Console.WriteLine("Imbue completed, you have used "+sn.imbueCount+" imbues out of the 3 available");
                    		Console.ReadLine();
                		}
            		


                } while (sn.imbueCount < 3);
                Console.WriteLine("Your final "+sn.itemName+" looks like this.");
                sn.ItemExamine();
            }


        }
}
